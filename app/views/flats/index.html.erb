<div class="container">
  <h1 class="mt-3 mb-3">Flats</h1>
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-3 card m-2">
      <div class="card-body">
        <h4><%= link_to flat.name, flat_path(flat), class: "text-decoration-none" %></h4>
        <p><%= flat.address%></p>
        <p><%= flat.description %></p>
        <p><i class="fa-solid fa-people-line"></i> <%= flat.number_of_guests %></p>
        <p><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
        <p><%= link_to "More info", flat_path(flat), class: "text-decoration-none" %></p>
        <p><%= link_to "Edit", edit_flat_path(flat), class: "text-decoration-none" %></p>
      </div>
    </div>
  <% end %>
  </div>
</div>
